<div class="container login-page__container">
  <div class="well">
    <h3 class='text-center'>
      <%= icon('user-o') %>
    </h3>
    <hr />
    <%= render partial: 'shared/alerts' %>
    <div class="row">
      <div class="col-xs-6">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class='form-group'>
            <div class='input-group'>
              <span class='input-group-addon input-sm' style='color: #ccc;'>E</span>
              <%= f.email_field :email, autofocus: true, class: 'form-control input-sm', placeholder: 'Email', required: true %>
            </div>
          </div>
          <div class='form-group'>
            <div class='input-group'>
              <span class='input-group-addon input-sm' style='color: #ccc;'>P</span>
              <%= f.password_field :password, autocomplete: "off", class: 'form-control input-sm', placeholder: 'Password', required: true %>
            </div>
            <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'login-page__forgot-password-link' %>
          </div>
          <div class='form-group text-center'>
            <%= f.submit 'Sign In', class: 'btn btn-success btn-max-width btn-sm' %>
          </div>
        <% end %>
        <p class='text-center'><small>OR CONNECT WITH</small></p>
        <div class='text-center'>
          <%= link_to icon('google'), omniauth_authorize_path(resource_name, :google_oauth2), class: 'btn btn-google' %>
        </div>
      </div>
      <div class="col-xs-6">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="field form-group">
            <div class='input-group'>
              <span class='input-group-addon input-sm' style='color: #ccc;'>E</span>
              <%= f.email_field :email, autofocus: true, class: 'form-control input-sm', placeholder: 'Email', required: true %>
            </div>
          </div>

          <div class="field form-group">
            <div class='input-group'>
              <span class='input-group-addon input-sm' style='color: #ccc;'>N</span>
              <%= f.text_field :name, class: 'form-control input-sm', placeholder: 'Name', required: true %>
            </div>
          </div>

          <div class="field form-group">
            <div class='input-group'>
              <span class='input-group-addon input-sm' style='color: #ccc;'>P</span>
              <%= f.password_field :password, autocomplete: "off", class: 'form-control input-sm', placeholder: 'Password (6 characters minimum)', required: true %>
            </div>
          </div>

          <div class="field form-group">
            <div class='input-group'>
              <span class='input-group-addon input-sm' style='color: #ccc;'>C</span>
              <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control input-sm', placeholder: 'Confirm Password', required: true %>
            </div>
          </div>

          <div class="actions form-group text-center">
            <%= f.submit "Sign up", class: 'btn btn-info btn-sm btn-max-width' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
