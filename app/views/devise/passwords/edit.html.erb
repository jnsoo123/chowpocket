<div class="container login-page__container_smaller">
  <div class='well'>
    <h4 class="text-center">Change Password</h4>
    <br />
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <% devise_error_messages! %>
      <%= render partial: 'shared/alerts' %>
      <%= f.hidden_field :reset_password_token %>
      <div class="field form-group">
        <div class='input-group'>
          <span class='input-group-addon input-sm'>N</span>
          <%= f.password_field :password, autofocus: true, autocomplete: "off", placeholder: 'New Password (6 characters minimum)', class: 'form-control input-sm'  %>
        </div>
      </div>

      <div class="field form-group">
        <div class="input-group">
          <span class="input-group-addon input-sm">C</span>
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Confirm New Password', class: 'form-control input-sm' %>
        </div>
      </div>

      <div class="actions form-group">
        <%= f.submit "Change my password", class: 'btn btn-success btn-max-width btn-sm' %>
      </div>
    <% end %>
    <hr />
    <%= link_to 'Login or Sign Up', new_user_session_path, class: 'btn btn-info btn-max-width btn-sm' %>
  </div>
</div>
