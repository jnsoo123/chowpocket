<div class="container login-page__container_smaller">
  <div class='well'>
    <h4 class="text-center">Reset Password</h4>
    <br />
    <p><small>Enter your email address below and we'll send you a link to reset your password.</small></p>
    <br />
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render partial: 'shared/alerts' %>
      <div class="field form-group">
        <div class="input-group">
          <span class='input-group-addon'>E</span>
          <%= f.email_field :email, autofocus: true, class: 'form-control input-sm' %>
        </div>
      </div>

      <div class="actions form-group">
        <%= f.submit "Reset Password", class: 'btn btn-success btn-max-width btn-sm' %>
      </div>
    <% end %>
    <hr />
    <%= link_to 'Login or Sign Up', new_user_session_path, class: 'btn btn-info btn-max-width btn-sm' %>
  </div>
</div>
