nav.nav.navbar-default
  .navbar-header
    button.navbar-toggle.collapsed data-target="#navbar-collapse-1" data-toggle="collapse" type="button" 
      span.sr-only Toggle navigation
      span.icon-bar
      span.icon-bar
      span.icon-bar
    = link_to root_path, class: 'navbar-brand' do
      | flash<strong>food</strong>
  #navbar-collapse-1.collapse.navbar-collapse
    ul.nav.navbar-nav.navbar-right
      - if user_signed_in?
        - if current_user.is_admin?
          li.navbar__link
            = link_to 'Administrator', admin_root_path
        li.navbar__link
          = link_to "Hi, #{current_user.name.titleize}", nil, disabled: true
        - if controller_name == 'buildings'
          li.navbar__link
            a data-target='#cart-modal' data-toggle='modal' href='#cart-modal' type='button'
              | View Cart
        li.navbar__link
          = link_to 'Logout', destroy_user_session_path, method: :delete
      - else
        li.navbar__link
          = link_to 'Login', new_user_session_path
